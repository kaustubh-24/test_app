<h1>Portfolio items</h1>

<%= link_to "Create new Portfolio item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
    <p><%= link_to item.title, portfolio_path(item) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <p><%= image_tag item.thumb_image if item.thumb_image %></p>
    <%= link_to "Edit Portfolio item", edit_portfolio_path(item) %>
    <hr>
<% end %>
